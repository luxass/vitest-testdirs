{
  "name": "vitest-testdirs",
  "version": "4.0.0",
  "description": "A utility for Vitest to create isolated test directories",
  "type": "module",
  "author": {
    "name": "Lucas Nørgård",
    "email": "lucasnrgaard@gmail.com",
    "url": "https://luxass.dev"
  },
  "packageManager": "pnpm@10.11.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luxass/vitest-testdirs.git"
  },
  "keywords": [
    "vitest",
    "testdirs"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./helpers": "./dist/helpers.js",
    "./vitest": "./dist/vitest.js",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest --run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "vitest": ">=2.0.5 <4.0.0"
  },
  "dependencies": {
    "testdirs": "^3.0.0"
  },
  "devDependencies": {
    "@luxass/eslint-config": "^4.18.1",
    "@types/node": "^20.14.9",
    "@vitest/coverage-v8": "^3.1.3",
    "eslint": "^9.26.0",
    "eslint-plugin-format": "^1.0.1",
    "publint": "^0.3.12",
    "tsdown": "^0.11.3",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  }
}
