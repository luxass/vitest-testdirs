{
  "name": "vitest-testdirs",
  "version": "0.2.0",
  "description": "A utility for Vitest to create isolated test directories",
  "type": "module",
  "author": {
    "name": "Lucas Nørgård",
    "email": "lucasnrgaard@gmail.com",
    "url": "https://luxass.dev"
  },
  "packageManager": "pnpm@9.4.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luxass/vitest-testdirs.git"
  },
  "keywords": [
    "vitest",
    "testdirs"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./utils": {
      "import": {
        "types": "./dist/utils.d.ts",
        "default": "./dist/utils.mjs"
      },
      "require": {
        "types": "./dist/utils.d.cts",
        "default": "./dist/utils.cjs"
      }
    },
    "./file-tree": {
      "import": {
        "types": "./dist/file-tree.d.ts",
        "default": "./dist/file-tree.mjs"
      },
      "require": {
        "types": "./dist/file-tree.d.cts",
        "default": "./dist/file-tree.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest --run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "vitest": "^1.6.0"
  },
  "devDependencies": {
    "@luxass/eslint-config": "^4.7.0",
    "@types/node": "^20.14.9",
    "eslint": "^9.6.0",
    "eslint-plugin-format": "^0.1.2",
    "memfs": "^4.9.3",
    "tsup": "^8.1.0",
    "typescript": "^5.5.2",
    "vitest": "^1.6.0"
  }
}
